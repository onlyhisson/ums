<!DOCTYPE html>
<html lang="en">
<head>
  <%- include ../_incl/inc_header.ejs %>
</head>
<body class="hold-transition skin-black sidebar-mini">
<div class="wrapper">

  <%- include ../_incl/inc_top.ejs %>
  <%- include ../_incl/inc_submenu.ejs %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        <%=title%>
      </h1>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="fa fa-commenting-o"></i> MAIN</a></li>
        <li class="breadcrumb-item active"><%=title%></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">

                <div class="box">
                    <div class="box-header with-border">
                        <a href="/suggest/suggestion_add">
                          <button class="btn btn-success" type="button">상담하기</button>
                        </a>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="table-responsive">
                            <!--
                                <table id="example1" class="table table-bordered table-striped">
                            -->
                            <table id="example1" class="table table-striped">
                            <thead>
                                <tr class="bb-3 border-purple">
                                    <th>문의번호</th>
                                    <th>상담할 내용</th>
                                    <th>문의할 내용의 사진 </th>
                                    <th>상담시간 </th>
                                    <th>회신 내용 </th>
                                    <th>답장시간 </th>
                                </tr>
                            </thead>
                            <tbody>
                                <%suggestList.forEach(function(el){%>
                                <tr>
                                    <td><%=el.id%></td>
                                    <td><%=el.content%></td>
                                    <td class="">
                                      <button class="btn btn-info btn-xs" data-toggle="modal" data-target="#modal-right" onclick="editModalContent('<%=el.pic%>','<%=el.reply_at%>' ,'<%=el.reply%>')">
                                        <i class="fa fa-eye"> IMAGE</i>
                                      </button>
                                    </td>
                                    <td><%=el.create_at%></td>
                                    <td><%=el.reply%></td>
                                    <td><%=el.reply_at%></td>
                                </tr>
                                <%})%>
                            </tbody>
                            <tfoot>
                                <tr class="bt-3 border-purple">
                                    <th>문의번호</th>
                                    <th>상담할 내용</th>
                                    <th>문의할 내용의 사진 </th>
                                    <th>상담시간 </th>
                                    <th>회신 내용 </th>
                                    <th>답장시간 </th>
                                </tr>
                            </tfoot>
                            </table>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->  

            </div>
        </div>
     
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  
   
  <%- include ../_incl/inc_footer.ejs %>
  <%- include ../_incl/inc_sidebar.ejs %>
  <%- include ../_incl/inc_modal.ejs %>
  
</div>
<!-- ./wrapper -->

<%- include ../_incl/inc_scripts.ejs %>

<!-- This is data table -->
<script src="/assets2/vendor_plugins/DataTables-1.10.15/media/js/jquery.dataTables.min.js"></script>
    
<!-- start - This is for export functionality only -->
<script src="/assets2/vendor_plugins/DataTables-1.10.15/extensions/Buttons/js/dataTables.buttons.min.js"></script>
<script src="/assets2/vendor_plugins/DataTables-1.10.15/extensions/Buttons/js/buttons.flash.min.js"></script>
<script src="/assets2/vendor_plugins/DataTables-1.10.15/ex-js/jszip.min.js"></script>
<script src="/assets2/vendor_plugins/DataTables-1.10.15/ex-js/pdfmake.min.js"></script>
<script src="/assets2/vendor_plugins/DataTables-1.10.15/ex-js/vfs_fonts.js"></script>
<script src="/assets2/vendor_plugins/DataTables-1.10.15/extensions/Buttons/js/buttons.html5.min.js"></script>
<script src="/assets2/vendor_plugins/DataTables-1.10.15/extensions/Buttons/js/buttons.print.min.js"></script>
<!-- end - This is for export functionality only -->

<!-- Crypto_Admin for Data Table -->
<script src="/assets2/js/pages/data-table.js"></script>

<script>
$(document).ready(function() {
  $('.sorting_asc').click();  // 내림차순 처리
})

</script>

<script>
function editModalContent(image, replyAt, reply) {
  let html = '';
  html += '<div class="text-center" style="padding: 0 0 0 0;">'
  html += ' <img src="https://www.ums.hk'+image+'">'
  html += '</div>'
  html += '<br>'
  html += '<h4>회신 내용</h4>'
  html += '<p>'+reply+'</p>'
  html += '<h4>회신 날짜</h4>'
  html += '<p>'+replyAt+'</p>'
  $('.modal-body').html(html)
}


</script>
</body>
</html>
