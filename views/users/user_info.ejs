</script>

<script>
    $('.update-apikey').click(function() {

        if(!checkKycInfo())
            return;

        $.ajax({
            type: 'POST',
            url: '/users/ajax/updateApiInfo',
            data: {
                api_id: $('#apiid').val(),
                api_key: $('#apikey').val()
			},
			success: function(data) {
				if(data.status =='_success_'){
					toastAlert(data.msg, '', 'success')
				} else {
					toastAlert(data.msg, '', 'error')
				}
			}
		})
    })
</script>

<script>
    /* 유효성 검증 */
    checkKycInfo = () => {
        if($('#apiid').val() == '') {
            $('#zbg_verification').html('* Access Key 값을 입력하십시오.');
            $('#zbg_verification').attr('class', 'text-danger')
            return false;
        }

        if($('#apikey').val() == '') {
            $('#zbg_verification').html('* Secret Key 값을 입력하십시오.');
            $('#zbg_verification').attr('class', 'text-danger')
            return false;
        }

        $('#zbg_verification').html('');
        return true;
    };
</script>
